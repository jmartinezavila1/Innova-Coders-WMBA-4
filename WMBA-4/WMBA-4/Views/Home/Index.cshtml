@{
    ViewData["Title"] = "Home Page";
}

<main>
    <div class="container-fluid">
        <h1 class="mt-4">Dashboard</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Season 2024</li>
        </ol>
        @* Current entities counts boxes *@
        <div class="row" data-masonry='{"percentPosition": true }'>
            <div class="col-xl-3 col-md-3">
                <div class="card text-black mb-4 card-hover shadow ">
                    <div class="card-body d-flex justify-content-around">
                        <span>Total Divisions</span>
                        <span>@ViewBag.DivisionCount</span>
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-black stretched-link" asp-area="" asp-controller="Division" asp-action="Index">View Divisions</a>
                        <div class="small px-2 text-black"><svg class="svg-inline--fa fa-angle-right" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="angle-right" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 512" data-fa-i2svg=""><path fill="currentColor" d="M246.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-160 160c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L178.7 256 41.4 118.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l160 160z"></path></svg><!-- <i class="fas fa-angle-right"></i> Font Awesome fontawesome.com --></div>
                    </div>
                </div>
            </div><div class="col-xl-3 col-md-3">
                <div class="card text-black mb-4 card-hover shadow ">
                    <div class="card-body d-flex justify-content-around">
                        <span>Total Teams</span>
                        <span>@ViewBag.TeamCount</span>
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-black stretched-link" asp-area="" asp-controller="Team" asp-action="Index">View Teams</a>
                        <div class="small px-2 text-black"><svg class="svg-inline--fa fa-angle-right" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="angle-right" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 512" data-fa-i2svg=""><path fill="currentColor" d="M246.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-160 160c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L178.7 256 41.4 118.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l160 160z"></path></svg><!-- <i class="fas fa-angle-right"></i> Font Awesome fontawesome.com --></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-3">
                <div class="card text-black mb-4 card-hover shadow ">
                    <div class="card-body d-flex justify-content-around">
                        <span>Total Players</span>
                        <span>@ViewBag.PlayerCount</span>
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-black stretched-link" asp-area="" asp-controller="Player" asp-action="Index">View Players</a>
                        <div class="small px-2 text-black"><svg class="svg-inline--fa fa-angle-right" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="angle-right" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 512" data-fa-i2svg=""><path fill="currentColor" d="M246.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-160 160c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L178.7 256 41.4 118.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l160 160z"></path></svg><!-- <i class="fas fa-angle-right"></i> Font Awesome fontawesome.com --></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-3">
                <div class="card text-black mb-4 card-hover shadow ">
                    <div class="card-body d-flex justify-content-around">
                        <span>Total Games</span>
                        <span>@ViewBag.GameCount</span>
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-black stretched-link" asp-area="" asp-controller="Game" asp-action="Index">View Games</a>
                        <div class="small px-2 text-black"><svg class="svg-inline--fa fa-angle-right" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="angle-right" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 512" data-fa-i2svg=""><path fill="currentColor" d="M246.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-160 160c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L178.7 256 41.4 118.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l160 160z"></path></svg><!-- <i class="fas fa-angle-right"></i> Font Awesome fontawesome.com --></div>
                    </div>
                </div>
            </div>
        </div>
        @* import box *@
        <div class="row">
            <div class="col-xl-6">
                <div class="card mb-4 card-hover shadow ">
                    <div class="card-header">
                        Import Teams
                    </div>
                    <div class="card-body">
                        <form asp-action="ImportTeam" asp-controller="Team" method="post" enctype="multipart/form-data">
                            <div class="row justify-content-evenly">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label custom-file-label">Upload Excel File:</label>
                                        <div class="input-group mb-3">
                                            <input type="file" class="form-control" name="theExcel" id="theExcel">
                                        </div>
                                        <div>
                                            Files must be less than 100 MB.<br />
                                            Allowed file types: .xls, .xlsx
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-kelly d-flex my-2">
                                            <span class="material-symbols-outlined me-2">
                                                upload
                                            </span>
                                            <span>Upload File</span>
                                        </button>
                                        <button type="submit" class="btn btn-outline-secondary d-flex my-2" asp-area="" asp-controller="ExportTemplate" asp-action="DownloadTemplate">
                                            <span class="material-symbols-outlined me-2">
                                                download
                                            </span>
                                            <span>Download Template</span>
                                        </button>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <ul>
                                        <li>Start by placing all the data you're going to upload in the first columns of the Excel spreadsheet, including the headers "ID," "First Name," "Last Name," "Member ID," "Season," "Division," "Club," and "Team."</li>
                                        <li>Begin entering the data from the second row of your spreadsheet.</li>
                                        <li>We recommend downloading the template to expedite your work.</li>
                                    </ul>

                                </div>
                                <div style="text-align: center;">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="card mb-4 card-hover shadow ">
                        <div class="card-header">
                            Import Teams
                        </div>
                        <div class="card-body">
                            <div class="col">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">Special title treatment</h5>
                                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                                            <a href="#" class="btn btn-primary">Go somewhere</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">Special title treatment</h5>
                                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                                            <a href="#" class="btn btn-primary">Go somewhere</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @* Game Assignments *@
            @* Will develop for game assingment *@
            
        </div>
    </div>
</main>