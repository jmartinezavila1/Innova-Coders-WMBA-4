@model WMBA_4.Models.Division

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3 class="text-red">Are you sure you want to delete <span class="text-bold">@Model.DivisionName</span> ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DivisionName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DivisionName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Club)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Club.ClubName)
        </dd>
    </dl>

    <form asp-action="Delete" class="form-group ">
        <input type="hidden" asp-for="ID" />
        <a href='@ViewData["returnURL"]' class="btn btn-outline-secondary mx-1">Back to the @ViewData["ControllerName"] List</a>
        <input type="submit" value="Delete" class="btn btn-danger mx-1" />
    </form>
</div>
