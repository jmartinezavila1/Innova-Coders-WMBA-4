@model IEnumerable<WMBA_4.Models.Team>

@{
    ViewData["Title"] = "Index";
}
<div class="p-in-flex">
    <div class="f-in-flex">
        <h1>Teams</h1>

        @using (Html.BeginForm("Create", "Team", FormMethod.Get))
        {
            <button type="submit" class="btn-kelly btn-text text-no-deco">Add Team</button>
        }
    </div>
    <form asp-action="Index" method="get">
        <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
        <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
        <div class="form-horizontal">
            <div class="d-flex">
                <button class="btn mb-2 btn-outline-dark @ViewData["Filtering"]" type="button" data-bs-toggle="collapse" id="filterToggle" data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
                    Filter/Search @ViewData["numberFilters"]
                </button>
            </div>
            <br />
            <div class="collapse" id="collapseFilter">
                <div class="card card-body bg-light">
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label class="control-label">Search Team by Name:</label>
                            @Html.TextBox("SearchString", null, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-4">
                            <label class="control-label">Select Division:</label>
                            @Html.DropDownList("DivisionID", null, "All Divisions", htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-4 align-self-end">
                            <input type="submit" name="actionButton" value="Filter" class="btn btn-outline-primary" />
                            <a asp-action="Index" class="btn btn-outline-dark">Clear</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <table class="table giro-table table-bordered">
            <thead>
                <tr>
                    <th>
                        @* Team *@
                        <input type="submit" name="actionButton" value="Team" class="text-column" />
                    </th>
                    <th>
                        @* Division *@
                        <input type="submit" value="Division" class="text-column" />
                    </th>
                    <th>
                        @* Coach *@
                        <input type="submit" name="actionButton" value="Coach" class="text-column" />
                    </th>
                    <th>
                        @* Operation *@
                        <input type="submit" value="Edit/Detail/Delete" class="text-column" />
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Division.DivisionName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Coach_Name)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID">
                                <span class="material-symbols-outlined ft-light-grey px-1">
                                    edit
                                </span>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ID">
                                <span class="material-symbols-outlined ft-light-grey px-1">
                                    visibility
                                </span>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ID">
                                <span class="material-symbols-outlined ft-light-grey px-1">
                                    delete
                                </span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>

</div>
