@model WMBA_4.Models.Team

<h1>@Model.Name</h1>
<p>
    Division: @Model.Division.DivisionName | Coach: @Model.Coach_Name | City: Welland
</p>
<p>
    <a asp-controller="Game" asp-action="Create" class="btn btn-primary" style="background-color: #4CBB17; color: #fff;">Schedule Game</a>
    <a asp-action="GameLineUp" asp-route-teamId="@Model.ID" class="btn btn-info" style="background-color: #4CBB17; color: #fff;">View Team Players</a>
</p>

<div>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Team Games</th>
                 <th>Game Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teamGame in Model.TeamGames)
            {
                var homeTeamName = teamGame.Game.TeamGames.FirstOrDefault(tg => tg.IsHomeTeam)?.Team.Name;
                var visitorTeamName = teamGame.Game.TeamGames.FirstOrDefault(tg => tg.IsVisitorTeam)?.Team.Name;

                <tr>
                    <td>@(homeTeamName ?? "Unknown Team") VS
                    @(visitorTeamName ?? "Unknown Team")</td>
                    <td>@teamGame.Game.Date</td>
                    <td>
                        <div>

                            <a asp-controller="Game" asp-action="Edit" asp-route-id="@teamGame.Game.ID">Edit</a>
                            <a asp-controller="Game" asp-action="Delete" asp-route-id="@teamGame.Game.ID">Delete</a>|
                        <a asp-controller="Game" asp-action="Details" asp-route-id="@teamGame.Game.ID">Details</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
