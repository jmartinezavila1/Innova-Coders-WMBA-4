@model List<WMBA_4.Models.GameLineUp>

<div class="lineup-container">
    <h3>Lineup</h3>
    <button id="addPlayerButton" class="btn btn-primary">Add Temporary Player</button>
    <table class="table">
        <thead>
            <tr>
                <th>Batting Position</th>
                <th>Player</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var player in Model)
            {
                <tr>
                    <td>@player.BattingOrder</td>
                    <td>@player.Player.FullName</td>
                    <td>
                        <button class="removePlayerButton btn btn-danger" data-playerid="@player.PlayerID">Remove</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
       
        $(".table").on("click", ".removePlayerButton", function () {
            var playerId = $(this).data("playerid");
            var confirmation = confirm("Are you sure you want to remove this player from the lineup?");
            if (confirmation) {
                $.ajax({
                    url: '@Url.Action("RemovePlayer", "ScorePlayer")',
                    type: "POST",
                    data: { playerId: playerId },
                    success: function (response) {
                        location.reload();
                    },
                    error: function () {
                        alert("An error occurred while removing the player.");
                    }
                });
            }
        });
    });
</script>