@model WMBA_4.ViewModels.InPlayMV

<form method="post" action="@Url.Action("SaveInplayChanges", "ScorePlayer")">
    <table class="table">
        <thead>
            <tr>
                <th>Player</th>
                <th>1B</th>
                <th>2B</th>
                <th>3B</th>
                <th>RBI</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td id="playerInBase1">@Model.PlayerInBase1Name</td>
                <td><input type="radio" name="playerInBase1Base" value="1" @(Model.PlayerInBase1Base.HasValue && Model.PlayerInBase1Base.Value == 1 ? "checked" : "") /></td>
                <td><input type="radio" name="playerInBase1Base" value="2" @(Model.PlayerInBase1Base.HasValue && Model.PlayerInBase1Base.Value == 2 ? "checked" : "") /></td>
                <td><input type="radio" name="playerInBase1Base" value="3" @(Model.PlayerInBase1Base.HasValue && Model.PlayerInBase1Base.Value == 3 ? "checked" : "") /></td>
                <td><input type="text" name="rbi1" /></td>
                <td>
                    <button type="button" class="btn btn-success">Run</button>
                    <button type="button" class="btn btn-danger">Out</button>
                </td>

            </tr>
            <tr>
                <td id="playerInBase2">@Model.PlayerInBase2Name</td>
                <td><input type="radio" name="playerInBase1Base" value="1" @(Model.PlayerInBase1Base.HasValue && Model.PlayerInBase1Base.Value == 1 ? "checked" : "") /></td>
                <td><input type="radio" name="playerInBase1Base" value="2" @(Model.PlayerInBase1Base.HasValue && Model.PlayerInBase1Base.Value == 2 ? "checked" : "") /></td>
                <td><input type="radio" name="playerInBase1Base" value="3" @(Model.PlayerInBase1Base.HasValue && Model.PlayerInBase1Base.Value == 3 ? "checked" : "") /></td>
                <td><input type="text" name="rbi" /></td>
                <td>
                    <button type="button" class="btn btn-success">Run</button>
                    <button type="button" class="btn btn-danger">Out</button>
                </td>
            </tr>
            <tr>
                <td id="playerInBase3">@Model.PlayerInBase3Name</td>
                <td><input type="radio" name="playerInBase1Base" value="1" @(Model.PlayerInBase1Base.HasValue && Model.PlayerInBase1Base.Value == 1 ? "checked" : "") /></td>
                <td><input type="radio" name="playerInBase1Base" value="2" @(Model.PlayerInBase1Base.HasValue && Model.PlayerInBase1Base.Value == 2 ? "checked" : "") /></td>
                <td><input type="radio" name="playerInBase1Base" value="3" @(Model.PlayerInBase1Base.HasValue && Model.PlayerInBase1Base.Value == 3 ? "checked" : "") /></td>
                <td><input type="text" name="rbi" /></td>
                <td>
                    <button type="button" class="btn btn-success">Run</button>
                    <button type="button" class="btn btn-danger">Out</button>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="hidden" name="inplayId" value="@Model.InplayID" />
                    <input type="hidden" name="playerBattingId" value="@Model.PlayerBattingId" />
                    <input type="hidden" name="playerInBase1Id" value="@Model.PlayerInBase1Id" />
                    <input type="hidden" name="playerInBase2Id" value="@Model.PlayerInBase2Id" />
                    <input type="hidden" name="playerInBase3Id" value="@Model.PlayerInBase3Id" />

                </td>


            <tr>
                <td id="playerInBase1">@Model.PlayerBattingName</td>
                <td><input type="radio" name="playerbattingID" value="1" @(Model.PlayerBattingId.HasValue && Model.PlayerBattingId.Value == 1 ? "checked" : "") /></td>
                <td><input type="radio" name="playerbattingID" value="2" @(Model.PlayerBattingId.HasValue && Model.PlayerBattingId.Value == 2 ? "checked" : "") /></td>
                <td><input type="radio" name="playerbattingID" value="3" @(Model.PlayerBattingId.HasValue && Model.PlayerBattingId.Value == 3 ? "checked" : "") /></td>
                <td><input type="text" name="rbiBatting" /></td>
                <td>
                    <button type="button" class="btn btn-success">Run</button>
                    <button type="button" class="btn btn-danger">Out</button>
                </td>
            </tr>
        </tbody>
    </table>
</form>
<style>
    .table td, .table th {
        padding: 0.05rem;
        margin: 0;
    }
</style>