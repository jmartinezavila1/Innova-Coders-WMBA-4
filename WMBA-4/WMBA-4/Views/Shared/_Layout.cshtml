<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WMBA_4</title>
    @* bootstrap *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layoutStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/media.css" asp-append-version="true" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-light-grey d-flex justify-content-between">
        <!-- Navbar Brand-->

        </div>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion bg-kelly" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav nav-text">
                        <a>Home</a>
                        <div class="sb-sidenav-menu-heading">Quick Access</div>
                        <a class="nav-link nav-hover" asp-area="" asp-controller="Team" asp-action="Index">Upload File</a>
                        <a class="nav-link nav-hover" asp-area="" asp-controller="Lineup" asp-action="Index">Scorekeeper</a>
                        <a class="nav-link nav-hover" asp-area="" asp-controller="Game" asp-action="Index">Season Games</a>
                        <div class="sb-sidenav-menu-heading">User Access</div>
                        <a class="nav-link nav-hover" asp-area="" asp-controller="Team" asp-action="Index">Teams</a>
                        <a class="nav-link nav-hover" asp-area="" asp-controller="Division" asp-action="Index">Divisions</a>
                        <a class="nav-link nav-hover" asp-area="" asp-controller="Player" asp-action="Index">Players</a>
                        
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-6 py-5">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div>
                            <h6 class="text-center ft-grey">Welland Minor Baseball Association Inc. © 2024</h6>
                            <p class="text-center ft-grey">
                                Welland Minor Baseball Association Inc. has been serving the youth of Welland and the surrounding communities since 1969.
                                We are the largest not-for-profit youth baseball organization in Welland.
                            </p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidenav.js" asp-append-version="true"></script>
   
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
