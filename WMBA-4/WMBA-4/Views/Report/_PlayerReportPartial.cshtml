@model WMBA_4.ViewModels.StatsVM
@* @model IEnumerable<WMBA_4.ViewModels.PlayerStatsVM> *@

@{
    ViewData["Title"] = "Player Stats";
}

@* <h1>Players</h1> *@
<div class="table-container" style="overflow-x: auto; width: 100%;">
    <table class="table-two">
        <thead>
            <tr>
                <th style="position: sticky; left: 0; background-color: white; width: 100px;">
                    @Html.DisplayNameFor(model => model.PlayerStats.First().Player)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().JerseyNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().Team)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().G)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().H)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().RBI)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().Singles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().Doubles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().Triples)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().BB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().PA)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().AB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().Run)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().HBP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().SO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().Out)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().AVG)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().OBP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().SLG)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerStats.First().OPS)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PlayerStats)
            {
                <tr>
                    <td style="position: sticky; left: 0; background-color: white; width: 100px;">
                        @Html.DisplayFor(modelItem => item.Player)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JerseyNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Team)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.G)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.H)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RBI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Singles)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Doubles)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Triples)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HR)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Run)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HBP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Out)
                    </td>
                    <td>
                        @item.AVG.ToString("F3")
                    </td>
                    <td>
                        @item.OBP.ToString("F3")
                    </td>
                    <td>
                        @item.SLG.ToString("F3")
                    </td>
                    <td>
                        @item.OPS.ToString("F3")
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
