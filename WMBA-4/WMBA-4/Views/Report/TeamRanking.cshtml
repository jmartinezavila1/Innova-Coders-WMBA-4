@model List<Team>

@* page navigation *@
<nav aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-chevron p-3 bg-breadcrumble rounded-3">
        <li class="breadcrumb-item">
            <a class="link-body-emphasis" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door-fill"></i>
            </a>
        </li>
        <li class="breadcrumb-item">
            <a class="link-body-emphasis fw-semibold text-decoration-none" asp-controller="Report" asp-action="TeamStats">Team Stats</a>
        </li>
        <li class="breadcrumb-item" aria-current="page">
            Teams Ranking
        </li>
    </ol>
</nav>
@* page navigation *@

<h1>Teams Ranking</h1>
<table class="table-four giro-table table-bordered">
    <thead>
        <tr>
            <th>Team Name</th>
            <th>Ranking</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td>@team.Name</td>
                <td>@team.Ranking</td>
                <td>
                    <span class="material-symbols-outlined ft-kelly px-2">
                        emoji_events
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="form-group">
    <a asp-area="" asp-controller="Report" asp-action="TeamStats" class="btn btn-outline-secondary mx-1">Back to the Team Stats List</a>
</div>

